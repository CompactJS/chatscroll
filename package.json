  "bugs": {
    "url": "https://github.com/CompactJS/chatscroll/issues"
  },
  "homepage": "https://github.com/CompactJS/chatscroll#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "eslint": "^6.8.0",
    "microbundle": "^0.12.0-next.8",
    "semantic-release": "^17.0.4"
  }
}
