    "prepare": "npm run build",
    "lint": "eslint src",
    "test": "npm run lint"
  },
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CompactJS/chatscroll.git"
  },
  "keywords": [
    "javascript",
    "chat",
    "scroll"
  ],
